<Window x:Class="MovieRentingManager.AddBookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRentingManager"
        mc:Ignorable="d"
        Title="Add Book" Height="300" Width="250">
    <StackPanel Margin="10">
        <Label>Title</Label>
        <TextBox x:Name="titleTextBox"/>
        <Label>Author</Label>
        <TextBox x:Name="authorTextBox" />
        <Label>Genre</Label>
        <TextBox x:Name="genreTextBox" />
        <Label>Year</Label>
        <TextBox x:Name="yearTextBox" />
        <Label>ISBN</Label>
        <TextBox x:Name="isbnTextBox" />
        <Button Content="Save" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
